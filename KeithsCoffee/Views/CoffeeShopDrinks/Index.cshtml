@{
  Layout = "_Layout";
}

@using KeithsCoffee.Models;
@model List<KeithsCoffee.Models.CoffeeShopDrink>

<img class="keith" src="~/img/Keef.png" alt="a photo of our caffiene fueled savior wearing some rad hats"/> 
<h1>Keith's Coffee Corner Drink Reviews</h1>
<hr/>

@if (Model.Count == 0)
{
  <p>There are currently no Drink Reviews.</p>
} 
else 
{
  <ul>
    @foreach(CoffeeShopDrink coffeeShopDrink in Model)
    {
      <h4><li>@Html.ActionLink(coffeeShopDrink.CoffeeShop.Name, "Details", new { id = coffeeShopDrink.CoffeeShopDrinkId }) | @coffeeShopDrink.Drink.Name</li></h4>
    }
  </ul>
}

<h5>@Html.ActionLink("Add Review", "AddReview")</h5>
<h5>@Html.ActionLink("Back Home", "Index", "Home")</h5>