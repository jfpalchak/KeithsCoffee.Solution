@{
  Layout = "_Layout";
}

@model KeithsCoffee.Models.Drink;

<h1>Edit Drink</h1>
<hr/>

<h3>Edit this drink: @Html.DisplayFor(model => model.Name)</h3>

<br/>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.DrinkId)

  @Html.LabelFor(model => model.Name)
  <br/>
  @Html.EditorFor(model => model.Name)
  <br/>
  <br/>
  <input type="submit" value="Save" class="btn btn-success" />
}

<br>
<div class="container">
  <h5>@Html.ActionLink("Back to Drink", "Details", new { id = Model.DrinkId })</h5>
</div>