@{
  Layout = "_Layout";
}

@using KeithsCoffee.Models;

<h1>Reviewed Coffee Shops</h1>
<hr/>

@if (Model.Count == 0)
{
  <p>There are currently no Coffee Shop Reviews.</p>
}
else
{
  <ul>
    @foreach(CoffeeShop coffeeShop in Model)
    {
      <h4><li>@Html.ActionLink(coffeeShop.Name, "Details", new { id = coffeeShop.CoffeeShopId })</li></h4>
    }
  </ul>
}

<h5>@Html.ActionLink("Add New Coffee Shop", "Create")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>