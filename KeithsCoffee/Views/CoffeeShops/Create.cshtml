@{
  Layout = "_Layout";
}

<h1>Add a new Coffee Shop</h1>

@model KeithsCoffee.Models.CoffeeShop 

<div class = "container">
  @using (Html.BeginForm())
  {
    <h4>Coffee Shop Name</h4>
    @Html.TextBoxFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    <br/>
    <h4>Keith's Rating</h4>
    @Html.RadioButtonFor(model => model.Rating, 1)<b> 1</b>
    @Html.RadioButtonFor(model => model.Rating, 2)<b> 2</b>
    @Html.RadioButtonFor(model => model.Rating, 3)<b> 3</b>
    @Html.RadioButtonFor(model => model.Rating, 4)<b> 4</b>
    @Html.RadioButtonFor(model => model.Rating, 5)<b> 5</b>
    <br />
    @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
    <br />
    <h4>Unionized?</h4>
    @Html.CheckBoxFor(model => model.Unionized) @:Yes
    <br />
    <h4>Price Range</h4>
    @Html.TextBoxFor(model => model.PriceRange, new { type = "number" })
    @Html.ValidationMessageFor(model => model.PriceRange, "", new { @class = "text-danger" })
    <br />
    <br />
    <input type="submit" value="Submit" class="btn btn-primary"/>
  }
</div>

<br />
<h5>@Html.ActionLink("Back to Coffee Shops", "Index")</h5>
    

  