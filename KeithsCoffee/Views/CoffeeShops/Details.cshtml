@{
  Layout = "_Layout";
}

@model KeithsCoffee.Models.CoffeeShop;
@using KeithsCoffee.Models;
@using System.Collections.Generic;

<h1>Coffee Shop Details</h1>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<br />
<h3>@Html.DisplayNameFor(model => model.Rating): @Html.DisplayFor(model => model.Rating)</h3>
<br />
<h3>@Html.DisplayNameFor(model => model.Unionized): @if (Model.Unionized)
{
  <img src="~/img/Bernie.jpg" alt="Bernie Sanders sitting in a chair" />
}
else 
{
  <img src="~/img/Reagan.png" alt="Ronald Reagan with red eyes"/>
}
</h3>
<br />
<h3>@Html.DisplayNameFor(model => model.PriceRange): 
@foreach (var i in Enumerable.Range(1, Model.PriceRange))
{
    <img src="~/img/bean.svg" alt="Bean" />
}
</h3>
<br />

